<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.5"
    android:background="#00125EE0">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/month_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/turnout_item"
                app:layout_constraintStart_toEndOf="@+id/date_item"
                app:layout_constraintTop_toTopOf="@+id/date_item" />

            <TextView
                android:id="@+id/final_hours_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="123 : 43"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/working_hours_per_trip_item"
                app:layout_constraintTop_toBottomOf="@+id/working_hours_per_trip_item" />

            <TextView
                android:id="@+id/working_hours_per_trip_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="21 : 09"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/end_of_work_item"
                app:layout_constraintTop_toBottomOf="@+id/end_of_work_item" />

            <TextView
                android:id="@+id/end_of_work_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="20 : 49"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/em_item"
                app:layout_constraintTop_toBottomOf="@+id/em_item" />

            <TextView
                android:id="@+id/em_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="63534"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/route_item"
                app:layout_constraintTop_toBottomOf="@+id/route_item" />

            <TextView
                android:id="@+id/route_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Инская - Барабинск"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/assistant_item"
                app:layout_constraintTop_toBottomOf="@+id/assistant_item" />

            <TextView
                android:id="@+id/assistant_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Усиков Алексей"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/turnout_item"
                app:layout_constraintTop_toBottomOf="@+id/turnout_item" />

            <TextView
                android:id="@+id/date_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/turnout_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ЯВКА 23:40"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/date_item"
                app:layout_constraintTop_toBottomOf="@+id/date_item" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>